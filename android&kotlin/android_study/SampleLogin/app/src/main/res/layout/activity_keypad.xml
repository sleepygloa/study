            android:id="@+id/et_keypad_number_decimal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:inputType="numberDecimal"
            />

    </LinearLayout>

    <LinearLayout
