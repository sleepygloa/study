            android:textSize="20dp"
            android:text="numberSigned"
            />
        <EditText
            android:id="@+id/et_keypad_number_signed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:inputType="numberSigned"
            />

    </LinearLayout>

