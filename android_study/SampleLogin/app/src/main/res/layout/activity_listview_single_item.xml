<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:padding="10dp"
    android:background="#ffffffff">

    <ImageView
        android:id="@+id/iv_listview_single_item_img"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/singer"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_listview_single_item_textview1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Text"
            android:textSize="22dp"
            android:textStyle="bold"
            android:textColor="#ff5805"
            />

        <TextView
            android:id="@+id/tv_listview_single_item_textview2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Net Text"
            android:textSize="14dp"
            android:textColor="#0223e0"
            android:layout_marginTop="10dp"
            />

        <TextView
            android:id="@+id/tv_listview_single_item_textview3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:text="Net Text"
            android:textSize="20dp"
            android:textColor="#4902d6"
            android:layout_marginTop="20dp"
            />


        
    </LinearLayout>


</LinearLayout>