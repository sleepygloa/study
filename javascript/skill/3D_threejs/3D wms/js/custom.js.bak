






function moveCam(eye_x, eye_y, eye_z, target_x, target_y, target_z)
{
	//동중이던 자동화 기능들을 모두 지우는 기능
	createjs.Tween.removeAllTweens();
	//카메라를 부드럽게 이동하는 명령
	createjs.Tween.get(camera.position)
		.to({
			x: eye_x, 
			y: eye_y, 
			z: eye_z
		}, 900, 
		createjs.Ease.sineInOut)
	.get(controls.target)
		.to({
			x: target_x, 
			y: target_y, 
			z: target_z
		}, 900, 
		createjs.Ease.sineInOut);

	animate();
}

